{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "babel/generator-star-spacing": [1, "after"],
    "babel/new-cap": 1,
    "babel/object-shorthand": 1,
    "babel/no-await-in-loop": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,

    //overrides
    "max-len": [2, 300, 4],
    "comma-dangle": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-no-bind": 0,
    "no-console": 0,
    "padded-blocks": 0,
    "no-debugger": 0,
    "camelcase": 0,
    "no-constant-condition": 0
  },
  "plugins": [
    "babel",
    "react"
  ]
}
